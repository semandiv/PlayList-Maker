        <item name="android:background">@color/main_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Theme.SettingsView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
