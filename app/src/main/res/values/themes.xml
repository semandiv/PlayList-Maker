<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="Theme.SettingsView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:colorAccent">@color/cursorColor</item>
    </style>

    <style name="Theme.SearchView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:colorAccent">@color/cursorColor</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="ThemeOverlay.PlaylistMaker.CustomSwitch" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlActivated">@color/main_background</item> <!-- Цвет для активного состояния -->
        <item name="colorOnSurface">@color/grayTint</item> <!-- Цвет выключенного состояния -->
        <item name="trackTint">@color/switchTrackColor</item>
        <item name="thumbTint">@color/grayTint</item>
    </style>


</resources>