<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainViewButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:layout_marginLeft">@dimen/big_padding</item>
        <item name="android:layout_marginRight">@dimen/big_padding</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/text_icon_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/medium_padding</item>
        <item name="iconTint">@color/text_icon_color</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
    </style>

    <style name="SettingsViewLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/big_padding</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/big_padding</item>
    </style>

    <style name="SearchFieldBlock">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/medium_padding</item>
        <item name="android:layout_marginLeft">@dimen/big_padding</item>
        <item name="android:layout_marginRight">@dimen/big_padding</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="EditTextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/grayTint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextButton">
        <item name="android:layout_width">@dimen/big_padding</item>
        <item name="android:layout_height">@dimen/big_padding</item>
        <item name="android:layout_marginLeft">@dimen/edit_field_padding</item>
        <item name="android:layout_marginRight">@dimen/edit_field_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tint">@color/grayTint</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/small_padding</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="EditFieldLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    //Блок стилей айтема RecyclerView
    <style name="coverImage">
        <item name="android:layout_width">@dimen/listImageSize</item>
        <item name="android:layout_height">@dimen/listImageSize</item>
        <item name="android:layout_marginStart">@dimen/medium_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="trackDescriptLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">@dimen/medium_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="trackNameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="trackArtistText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/grayTint</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="trackTimeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/grayTint</item>
    </style>

    <style name="trackItemRightArrow">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_width">@dimen/itemRightArrow</item>
        <item name="android:layout_height">@dimen/itemRightArrow</item>
        <item name="tint">@color/grayTint</item>
    </style>

    <style name="trackItemLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <style name="refreshBtnStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="noResultIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:contentDescription">@string/placeholder</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
        <item name="android:src">@drawable/no_result_light_mode</item>
    </style>

    <style name="noConnectIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:contentDescription">@string/placeholder</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
        <item name="android:src">@drawable/no_internet_light_mode</item>
    </style>

    <style name="retrofitErrorMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginLeft">@dimen/itemRightArrow</item>
        <item name="android:layout_marginRight">@dimen/itemRightArrow</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingBottom">@dimen/big_padding</item>
    </style>


</resources>