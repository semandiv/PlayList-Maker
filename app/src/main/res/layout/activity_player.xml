<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/albumCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Album Cover"
        android:src="@drawable/cover_temp_background"
        android:scaleType="centerCrop"
        app:cornerRadius="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/toolBar"/>

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="22sp"
        android:text="Yesterday (Remastered 2009)"
        android:textColor="@color/text_icon_color"
        android:textFontWeight="400"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/albumCover"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="@color/text_icon_color"
        android:textFontWeight="400"
        android:text="The Beatles"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageButton
        android:id="@+id/addToPlaylist"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:contentDescription="Add track to playlist"
        android:src="@drawable/baseline_add_to_23"
        android:background="@drawable/round_button_light"
        android:scaleType="centerInside"
        android:alpha="0.25"
        app:layout_constraintEnd_toStartOf="@id/playButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/artistName"/>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Play track"
        android:src="@drawable/baseline_play_circle_filled_84"
        android:scaleType="fitCenter"
        android:background="@drawable/round_play_light"
        app:layout_constraintStart_toEndOf="@id/addToPlaylist"
        app:layout_constraintEnd_toStartOf="@id/likeButton"
        app:layout_constraintTop_toBottomOf="@id/artistName"/>

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:alpha="0.25"
        android:contentDescription="Add track to favorities"
        android:src="@drawable/baseline_favorite_border_25"
        android:background="@drawable/round_button_light"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/playButton"
        app:layout_constraintTop_toBottomOf="@id/artistName"/>

    <TextView
        android:id="@+id/playingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="@color/text_icon_color"
        android:textFontWeight="400"
        android:text="3:30"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/playButton"/>

    <TextView
        android:id="@+id/timePlayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Длительность"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playingTime"
        app:layout_constraintEnd_toEndOf="@id/timePlayValue"/>

    <TextView
        android:id="@+id/timePlayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:35"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/darkBackground"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/timePlayName"
        app:layout_constraintTop_toBottomOf="@id/playingTime"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="timePlayName, timePlayValue"
        app:barrierDirection="bottom"/>

    <TextView
        android:id="@+id/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Альбом"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintEnd_toStartOf="@id/albumNameValue"/>

    <TextView
        android:id="@+id/albumNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yesterday (Remastered 2009)"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/darkBackground"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/albumName"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/albumNameGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="albumName, albumNameValue"/>

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Год"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        app:layout_constraintEnd_toStartOf="@id/yearValue"/>

    <TextView
        android:id="@+id/yearValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1965"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/darkBackground"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/year"
        app:layout_constraintTop_toBottomOf="@id/albumNameValue"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Жанр"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/year"
        app:layout_constraintEnd_toStartOf="@id/genreValue"/>

    <TextView
        android:id="@+id/genreValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/darkBackground"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/genre"
        app:layout_constraintTop_toBottomOf="@id/yearValue"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Страна"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genre"
        app:layout_constraintEnd_toStartOf="@id/countryValue"/>

    <TextView
        android:id="@+id/countryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Великобритания"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/darkBackground"
        android:textFontWeight="400"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/country"
        app:layout_constraintTop_toBottomOf="@id/genreValue"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>