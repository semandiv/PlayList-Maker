<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/albumCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/cover_temp_background"
        android:scaleType="centerCrop"
        app:cornerRadius="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/toolBar"/>

    <TextView
        android:id="@+id/trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="22sp"
        android:text="Yesterday (Remastered 2009)"
        android:textColor="@color/text_icon_color"
        android:textFontWeight="400"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/albumCover"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0"/>

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="@color/text_icon_color"
        android:textFontWeight="400"
        android:text="The Beatles"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/trackName"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageButton
        android:id="@+id/addToPlaylist"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/plus_button"
        android:background="@drawable/round_button"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/playButton"
        app:layout_constraintTop_toBottomOf="@id/artistName"/>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/play_button"
        android:background="@drawable/round_button"
        app:layout_constraintStart_toEndOf="@id/addToPlaylist"
        app:layout_constraintEnd_toStartOf="@id/likeButton"
        app:layout_constraintTop_toBottomOf="@id/artistName"/>

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/favorites_button"
        android:background="@drawable/round_button"
        app:layout_constraintStart_toEndOf="@id/playButton"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/artistName"/>

    <TextView
        android:id="@+id/playingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        android:textColor="@color/text_icon_color"
        android:textFontWeight="400"
        android:text="3:30"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/playButton"/>

    <TextView
        android:id="@+id/timePlayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Длительность"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playingTime"
        app:layout_constraintEnd_toStartOf="@id/timePlayValue"/>

    <TextView
        android:id="@+id/timePlayValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:35"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="13sp"
        android:textColor="@color/grayTint"
        android:textFontWeight="400"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/playingTime"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"/>

</androidx.constraintlayout.widget.ConstraintLayout>